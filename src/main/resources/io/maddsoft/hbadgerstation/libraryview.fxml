<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.GridView?>
<?import org.controlsfx.glyphfont.Glyph?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.maddsoft.hbadgerstation.gui.LibraryViewController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="1920.0" styleClass="custom-border" stylesheets="@../../../custom_css.css">
         <children>
            <Button mnemonicParsing="false" onAction="#openImportPrintableDialog" text="Import Printable">
               <styleClass>
                  <String fx:value="rounded" />
                  <String fx:value="success" />
               </styleClass>
            </Button>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deletePrintable">
               <graphic>
                  <Glyph fontFamily="FontAwesome" icon="TRASH" />
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
      <SplitPane fx:id="libraryDivider" dividerPositions="0.2" focusTraversable="true" prefWidth="1920.0" VBox.vgrow="ALWAYS">
         <items>
            <VBox fx:id="librarySidebar" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="768.0" />
            <AnchorPane fx:id="libraryParent" prefHeight="600.0" prefWidth="1090.0">
               <children>
                  <GridView fx:id="libraryView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
</VBox>
