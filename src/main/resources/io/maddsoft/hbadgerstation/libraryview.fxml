<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="libraryDivider" dividerPositions="0.2" focusTraversable="true" prefHeight="600.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.maddsoft.hbadgerstation.gui.LibraryViewController">
   <items>
      <VBox fx:id="librarySidebar" alignment="TOP_CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#openImportPrintableDialog" text="Import Printable" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <styleClass>
                  <String fx:value="rounded" />
                  <String fx:value="success" />
               </styleClass>
            </Button>
            <Button fx:id="openExplorerButton" disable="true" mnemonicParsing="false" onAction="#openExplorerAction" styleClass="rounded" text="Open in Explorer" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TableView fx:id="libraryView" prefHeight="600.0" prefWidth="892.0">
               <columns>
                  <TableColumn fx:id="previewColumn" prefWidth="169.0" text="Preview" />
                  <TableColumn fx:id="nameColumn" prefWidth="186.0" text="Name" />
                  <TableColumn fx:id="authorColumn" minWidth="0.0" prefWidth="267.0" text="Author" />
                  <TableColumn fx:id="pathColumn" prefWidth="443.0" text="Path" />
                  <TableColumn fx:id="typeColumn" minWidth="0.0" prefWidth="94.0" text="Type" />
               </columns>
            </TableView>
         </children>
      </GridPane>
   </items>
</SplitPane>
