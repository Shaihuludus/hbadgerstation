<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<HBox alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.maddsoft.hbadgerstation.gui.controls.RemovablePill">
   <children>
      <Label fx:id="pillLabel" styleClass="button" text="Label" HBox.hgrow="ALWAYS"/>
      <Button fx:id="removeButton" mnemonicParsing="false" disable="true" visible="false" managed="false">
      <graphic>
         <Glyph fontFamily="FontAwesome" icon="MINUS_CIRCLE" />
      </graphic>
      </Button>
   </children>
   <userData>
      <fx:reference source="controller" />
   </userData>
</HBox>
